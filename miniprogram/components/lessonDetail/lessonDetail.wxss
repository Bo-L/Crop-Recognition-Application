/* components/lessonDetail/lessonDetail.wxss */
 @import "../../app.wxss"; 
.container{
  background: rgba(0, 0, 0, .5); 
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
   z-index: 9999; 
}
.detail-wrap{
  width: 620rpx;
  background:#ffffff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border-radius: 16rpx;
}
.detail-wrap .detail-top{
  height: 190rpx;
  background: #7DD100;
  padding-top: 40rpx;
  padding-left: 30rpx;
  padding-bottom: 20rpx;
  color: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}
.detail-top .person-info{
  height: 144rpx;
  display: flex;
}
 .person-info .head{
  width: 110rpx;
  padding-top: 30rpx;
}
.head image{
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: #ffffff;
}
.person-info .person{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.person .name{
   font-size: 28rpx; 
}
.person .name image{
  height: 20rpx;
  width: 20rpx;
  border-radius: 50%;
  background: #fff;
  margin-left: 10rpx;
}
.person .address .area{
  margin-left: 20rpx;
}
.person .grade text{
  display: inline-block;
  height: 30rpx;
  padding: 0 10rpx;
  border: 1px solid #ffffff;
  border-radius: 20rpx;
  line-height: 26rpx;
  margin-right: 10rpx;
  box-sizing: border-box;
}
.detail-top .lesson-time{
  display: flex;
  align-items: center;
}
.lesson-time image{
  height: 30rpx;
  width: 24rpx;
  margin-right: 10rpx;
}
.lesson-time .data{
  margin: 0 10rpx;
}
.lesson-bottom{
  padding: 30rpx 30rpx 0;
}
.lesson-bottom .title{
  color: #979fa8;
  height: 40rpx;
  line-height: 24rpx;
}
.lesson-bottom .lesson-demand .content{
  display: flex;
  /* justify-content: space-between; */
  flex-wrap: wrap;
  margin-bottom: 10rpx;
}
.lesson-demand .content text{
  padding: 0 20rpx;
  border-radius: 20rpx;
  height: 44rpx;
  border: 1px solid #ff9d60;
  margin-right: 16rpx;
  box-sizing: border-box;
  color: #ff9d60;
  margin-bottom: 20rpx;
}
.audition-content .content{
  line-height: 32rpx;
  font-size: 28rpx;
  padding-bottom: 32rpx;
}
.audition-demand .content{
  font-size: 28rpx;
  line-height: 32rpx;
  padding-bottom: 72rpx;
}
.button-wrap{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 20rpx;
}
.button-wrap .btn{
  margin-bottom: 20rpx;
  display: inline-block;
  font-size: 28rpx;
}
.button-wrap .tack{
   height: 84rpx;
   color: #fff;
   width: 520rpx;
   background: linear-gradient(to right, #ff4342 , #ff6a10);
   border-radius: 42rpx;
   line-height: 84rpx;
}
.button-wrap .no-tack{
  height: 40rpx;
  line-height: 40rpx;
  color: #979fa8;
}
.button-wrap .count_down{
  padding: 0 80rpx;
  height: 64rpx;
  background: #007af8;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-radius: 32rpx;
}
.count_down image{
  width: 24rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.count_down .time{
  margin-left: 10rpx;
}
.close{
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
  background: #7DD100;
  color: #fff;
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 26rpx;
}